<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="data"
            type="com.example.example.BasketDetailResponse" />
        <variable
            name="viewModel"
            type="com.neomoneybonds.app.viewmodels.BasketDetailsViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/money_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="@dimen/_20dp"
                app:layout_constraintTop_toBottomOf="@id/money_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="@{String.valueOf(data.basket.getTenure())}"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textSize="@dimen/_14sp"
                    android:layout_marginBottom="@dimen/_20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="7.5%"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_40dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="8.23%"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textSize="@dimen/_14sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="9.23%"
                    android:layout_marginTop="@dimen/_20dp"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="@dimen/_20dp"
                app:layout_constraintTop_toBottomOf="@id/money_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="Return"
                    android:textSize="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="Return"
                    android:textSize="@dimen/_10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="Return"
                    android:textSize="@dimen/_10sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:textColor="@color/_neutral_snow"
                    android:text="Return"
                    android:textSize="@dimen/_10sp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>