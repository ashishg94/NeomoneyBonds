<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.neomoneybonds.app.viewmodels.BasketDetailsViewModel" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/purchase_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/layout_header"
                layout="@layout/layout_purchase_details_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_21dp"
                android:layout_marginEnd="@dimen/_16dp"
                app:layout_constraintTop_toTopOf="parent"
                />

            <include
                android:id="@+id/layout_basket"
                layout="@layout/layout_recharge_neo_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_21dp"
                android:layout_marginEnd="@dimen/_16dp"
                app:layout_constraintTop_toBottomOf="@id/layout_header" />

            <include
                android:id="@+id/layout_grade"
                layout="@layout/layout_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_21dp"
                android:layout_marginEnd="@dimen/_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_header"
                app:layout_constraintTop_toTopOf="parent"
                />
            <include
                layout="@layout/layout_addmoney_btn"
                android:layout_width="match_parent"
                bind:viewModel="@{viewModel}"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout_basket"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>