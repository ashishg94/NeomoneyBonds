<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="#82EBA1"
                android:startColor="#00C1CE"
                android:type="linear" />
            <corners android:radius="@dimen/margin_10"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1F1C40" />
            <corners android:radius="@dimen/margin_10"/>
        </shape>
    </item>

</layer-list>